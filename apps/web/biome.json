{
	"root": false,
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"extends": ["../../biome.json"],
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"linter": {
		"rules": {
			"suspicious": {
				"useBiomeIgnoreFolder": "error"
			}
		}
	},
	"files": {
		"includes": ["**", "!src/locales"]
	},
	"overrides": [
		{
			"includes": ["src/features/rules/components/ConditionGroupEditor.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noArrayIndexKey": "off"
					}
				}
			}
		}
	]
}
