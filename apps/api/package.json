{
	"name": "api",
	"version": "0.1.0",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"description": "GraphQL API server for Drivebase",
	"scripts": {
		"dev": "bun --hot index.ts",
		"start": "bun index.ts",
		"test": "bun codegen && bun test",
		"test:watch": "bun test --watch",
		"check-types": "tsc --noEmit",
		"codegen": "graphql-codegen --config codegen.yml",
		"codegen:watch": "graphql-codegen --config codegen.yml --watch"
	},
	"dependencies": {
		"@drivebase/core": "workspace:*",
		"@drivebase/darkibox": "workspace:*",
		"@drivebase/db": "workspace:*",
		"@drivebase/dropbox": "workspace:*",
		"@drivebase/ftp": "workspace:*",
		"@drivebase/google-drive": "workspace:*",
		"@drivebase/local": "workspace:*",
		"@drivebase/nextcloud": "workspace:*",
		"@drivebase/s3": "workspace:*",
		"@drivebase/telegram": "workspace:*",
		"@drivebase/webdav": "workspace:*",
		"@graphql-tools/graphql-file-loader": "^8.0.5",
		"@graphql-tools/load": "^8.0.5",
		"@graphql-tools/schema": "^10.0.31",
		"bcryptjs": "^3.0.3",
		"bullmq": "5.69.3",
		"drizzle-orm": "^0.45.1",
		"graphql": "^16.9.0",
		"graphql-yoga": "^5.11.1",
		"hono": "^4.7.0",
		"ioredis": "5.9.2",
		"jose": "^6.1.3",
		"pino": "^10.3.1",
		"pino-pretty": "^13.1.3",
		"telegram": "^2.26.22",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^6.1.1",
		"@graphql-codegen/typescript": "^5.0.7",
		"@graphql-codegen/typescript-resolvers": "^5.1.5",
		"@types/bcryptjs": "^3.0.0",
		"@types/bun": "latest",
		"@types/ioredis": "^5.0.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
