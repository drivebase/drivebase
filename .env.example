# Shared app config
NODE_ENV=development

# API server
PORT=4000
# Set to your public API URL in production (e.g. https://app.example.com)
API_BASE_URL=http://localhost:4000
CORS_ORIGIN=http://localhost:3000

# Database / Redis
DATABASE_URL=postgres://postgres:postgres@localhost:5432/drivebase
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-jwt-secret-minimum-32-characters-long-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-minimum-32-characters-long-change-this-in-production

# Web client
# Public API URL used by the web app.
VITE_PUBLIC_API_URL=http://localhost:4000/graphql

# AI inference service (optional)
AI_INFERENCE_URL=http://localhost:8010
# AI_INFERENCE_TOKEN=
# AI_MODELS_DIR=./.drivebase/models
AI_MAX_FILE_SIZE_MB=50
