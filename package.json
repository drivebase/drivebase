  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "api:dev": "nest start --watch",
    "api:debug": "nest start --debug --watch",
    "api:prod": "node dist/apps/drivebase/main",
    "api:build": "nest build",
    "web:dev": "cd web && vite",
    "web:build": "cd web && vite build",
    "dev": "concurrently \"npm run api:dev\" \"npm run web:dev\"",
    "build": "concurrently \"npm run api:build\" \"npm run web:build\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/drivebase/test/jest-e2e.json",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
