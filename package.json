  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@drivebase/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@drivebase/db(|/.*)$": "<rootDir>/libs/db/src/$1",
      "^@drivebase/files(|/.*)$": "<rootDir>/libs/files/src/$1",
      "^@drivebase/providers(|/.*)$": "<rootDir>/libs/providers/src/$1",
      "^@drivebase/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@drivebase/users(|/.*)$": "<rootDir>/libs/users/src/$1",
      "^@drivebase/workspaces(|/.*)$": "<rootDir>/libs/workspaces/src/$1"
