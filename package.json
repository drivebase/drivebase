{
	"name": "drivebase",
	"version": "1.13.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"api": "bun --env-file=.env.local turbo run --filter=@drivebase/api dev",
		"build": "bun --env-file=.env turbo run build --filter=@drivebase/api --filter=web",
		"dev": "bun --env-file=.env.local turbo run dev --parallel --filter=@drivebase/api --filter=web",
		"dev:local": "bun --env-file=.env.local turbo run dev --parallel --filter=@drivebase/api --filter=web",
		"test": "bun test --env-file=.env.test",
		"test:watch": "bun test --env-file=.env.test --watch",
		"check-types": "turbo run check-types",
		"db:generate": "bun run --filter=@drivebase/db generate",
		"db:migrate": "bun run --filter=@drivebase/db migrate",
		"db:studio": "bun run --filter=@drivebase/db studio",
		"release": "release-it",
		"prepare": "husky",
		"format": "biome format --write",
		"check": "biome check --write"
	},
	"overrides": {
		"yaml": "2.7.0"
	},
	"resolutions": {
		"yaml": "2.7.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@release-it/bumper": "^7.0.5",
		"@release-it/conventional-changelog": "^10.0.5",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"release-it": "^19.2.4",
		"turbo": "^2.8.3",
		"yaml": "2.7.0"
	},
	"packageManager": "bun@1.3.5"
}
