{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "types": ["node", "multer", "vitest/globals"],
    "jsx": "react-jsx",
    "paths": {
      "@drivebase/auth": ["libs/auth/src"],
      "@drivebase/auth/*": ["libs/auth/src/*"],
      "@drivebase/common": ["libs/common/src"],
      "@drivebase/common/*": ["libs/common/src/*"],
      "@drivebase/database": ["libs/database/src"],
      "@drivebase/database/*": ["libs/database/src/*"],
      "@drivebase/files": ["libs/files/src"],
      "@drivebase/files/*": ["libs/files/src/*"],
      "@drivebase/providers": ["libs/providers/src"],
      "@drivebase/providers/*": ["libs/providers/src/*"],
      "@drivebase/users": ["libs/users/src"],
      "@drivebase/users/*": ["libs/users/src/*"],
      "@drivebase/web/*": ["web/*"],
      "@drivebase/workspaces": ["libs/workspaces/src"],
      "@drivebase/workspaces/*": ["libs/workspaces/src/*"]
    },
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./schema.gql"
      }
    ]
  }
}
