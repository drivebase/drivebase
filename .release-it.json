{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "Release ${version}"
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": ["docker-compose.yaml"]
    }
  }
}
