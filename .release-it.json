{
	"git": {
		"tagName": "v${version}",
		"commitMessage": "chore: release v${version}"
	},
	"github": {
		"release": true,
		"tokenRef": "GITHUB_TOKEN",
		"releaseName": "v${version}"
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{ "type": "feat", "section": "âœ¨ Features", "hidden": false },
					{ "type": "fix", "section": "ğŸ› Fixes", "hidden": false },
					{ "type": "style", "section": "ğŸ¨ Styling", "hidden": false },
					{ "type": "docs", "section": "ğŸ“ Docs", "hidden": false },
					{}
				]
			},
			"infile": "CHANGELOG.md",
			"strictSemVer": true
		},
		"@release-it/bumper": {
			"out": [
				{
					"file": "docker/compose.prod.yaml",
					"type": "text/plain"
				},
				{
					"file": "render.yaml",
					"type": "text/plain"
				},
				"apps/www/components/landing/hero-section.tsx",
				"services/ai-inference/app.py"
			]
		}
	}
}
