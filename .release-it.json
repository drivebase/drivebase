{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": [
        {
          "file": "docker/compose.prod.yaml",
          "type": "text/plain"
        },
        "apps/www/components/landing/hero.tsx"
      ]
    }
  }
}
